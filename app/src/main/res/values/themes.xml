<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodie" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_wine</item>
        <item name="colorPrimaryVariant">@color/dirty_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darker_orange</item>
        <item name="colorSecondaryVariant">@color/darker_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/dark_grey</item>

    </style>
    <style name="bottom_nav">
        <item name="itemBackground">@color/white</item>
    </style>

    <style name="headers">
        <item name="android:textColor">@color/dark_wine</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fragment_bg">
        <item name="android:background">@drawable/gradient_light_grey</item>
    </style>

    <style name="card_bg">
        <item name="android:background">@color/lightest_orange</item>

    </style>


</resources>