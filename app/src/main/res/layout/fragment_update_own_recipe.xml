<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UpdateOwnRecipeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add your own recipe"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/myfont"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/edit_header"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit the name of your meal"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/myfont"
            app:layout_constraintTop_toBottomOf="@id/edit_header"
            android:id="@+id/tv_edit_meal_name"
            android:layout_margin="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_meal_name"
            android:hint="Your meal name..."
            android:id="@+id/et_edit_meal_name"
            android:layout_margin="16dp"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit the category of your meal"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/myfont"
            app:layout_constraintTop_toBottomOf="@id/et_edit_meal_name"
            android:id="@+id/tv_edit_category_name"
            android:layout_margin="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_category_name"
            android:hint="Category..."
            android:id="@+id/et_edit_category_name"
            android:layout_margin="16dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit ingredients"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/myfont"
            app:layout_constraintTop_toBottomOf="@id/et_edit_category_name"
            android:id="@+id/tv_edit_ingredients"
            android:layout_margin="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_ingredients"
            android:hint="ex. Apples (2 large)"
            android:id="@+id/et_edit_ingredients"
            android:layout_margin="16dp"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to make it?"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/myfont"
            app:layout_constraintTop_toBottomOf="@id/et_edit_ingredients"
            android:id="@+id/tv_edit_instructions"
            android:layout_margin="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_instructions"
            android:hint="Your instructions..."
            android:id="@+id/et_edit_instructions"
            android:layout_margin="16dp"
            android:inputType="textMultiLine"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update My Recipe"
            app:layout_constraintTop_toBottomOf="@id/et_edit_instructions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:id="@+id/update_recipe_button"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>