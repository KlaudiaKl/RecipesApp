<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/searched_item_img"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/searched_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/myfont"
            android:maxLines="1"
            android:text="Meal Name"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toEndOf="@id/searched_item_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/searched_item_img" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/searched_item_img"
            app:layout_constraintTop_toBottomOf="@id/searched_item_name"
            android:text=""
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/myfont"
            android:layout_margin="8dp"
            android:id="@+id/searched_item_category"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/searched_item_img"
            app:layout_constraintTop_toBottomOf="@id/searched_item_category"
            android:text=""
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/myfont"
            android:layout_margin="8dp"
            android:id="@+id/searched_item_area"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>